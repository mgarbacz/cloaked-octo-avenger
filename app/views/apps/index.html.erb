<h1>Listing apps</h1>

<table>
  <thead>
    <tr>
      <th>Job Title</th>
      <th>Applicant Name</th>
      <th>Applicant Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= @job.title %></td>
        <td><%= app.applicant.name %></td>
        <td><%= app.applicant.email %></td>
        <td><%= link_to 'Show', job_app_path(@job.id, app) %></td>
        <td><%= link_to 'Edit', edit_job_app_path(@job, app) %></td>
        <td><%= link_to 'Destroy', job_app_path(@job, app), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_job_app_path %>
